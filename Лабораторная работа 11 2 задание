#include <bits/stdc++.h>
using namespace std;

int reverseDigitsInt(int n) {
    if (n == 0) return 0;
    int sign = 1;
    if (n < 0) { sign = -1; n = -n; }
    int res = 0;
    while (n > 0) {
        res = res * 10 + (n % 10);
        n /= 10;
    }
    return res * sign;
}

void flip_ptr(int* N) {
    if (N == nullptr) return;
    *N = reverseDigitsInt(*N);
}

void flip_ref(int& N) {
    N = reverseDigitsInt(N);
}

int flip_val(int N) {
    return reverseDigitsInt(N);
}

int main() {
    setlocale(LC_ALL,"Russian");

    int a1 = 567321;
    cout << "Исходное a1 = " << a1 << "\n";
    flip_ptr(&a1);
    cout << "После flip_ptr(&a1): a1 = " << a1 << "\n\n";

    int a2 = 567321;
    cout << "Исходное a2 = " << a2 << "\n";
    flip_ref(a2);
    cout << "После flip_ref(a2): a2 = " << a2 << "\n\n";

    int a3 = 567321;
    cout << "Исходное a3 = " << a3 << "\n";
    int r = flip_val(a3);
    cout << "После flip_val(a3): исходное a3 = " << a3 << " , возвращено = " << r << "\n";

    return 0;
}
