#include <iostream>
#include <cmath>
using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian");

    int n, m;

    n = 5;
    m = 7;

    int a[n][m];
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            a[i][j] = 0;
    int kol = 1;
    for (int j = 0; j < m; j++)
    {
        if (j < 4 || j == m - 1)
        {
            for (int i = 0; i < kol; i++)
            {
                a[i][j] = kol;
            }
            kol++;
        }

    }
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            if (a[i][j] > 0)
                cout << a[i][j] << '\t';
            else
                cout << "_\t";
        }
        cout << '\n';
    }

}
