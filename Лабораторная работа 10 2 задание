#include <bits/stdc++.h>
using namespace std;

int reverseDigitsInt(int n) {
    if (n == 0) return 0;
    int sign = 1;
    if (n < 0) { sign = -1; n = -n; }
    int res = 0;
    while (n > 0) {
        res = res * 10 + (n % 10);
        n /= 10;
    }
    return res * sign;
}

void flip(int* N,char s) {
    if (N == nullptr) return;
    *N = reverseDigitsInt(*N);
}

void flip(int& N,string mid) {
    N = reverseDigitsInt(N);
}

int flip(int N) {
    return reverseDigitsInt(N);
}

int main() {
    setlocale(LC_ALL,"Russian");

    int a1 = 567321;
    cout << "Исходное a1 = " << a1 << "\n";

    flip(&a1,'T');
    cout << "После flip(&a1,char): a1 = " << a1 << "\n\n";

    int a2 = 567321;
    cout << "Исходное a2 = " << a2 << "\n";
    flip(a2,"string");
    cout << "После flip(a2,string): a2 = " << a2 << "\n\n";

    int a3 = 567321;
    cout << "Исходное a3 = " << a3 << "\n";
    int r = flip(a3);
    cout << "После flip(a3): исходное a3 = " << a3 << " , возвращено = " << r << "\n";

    return 0;
}
