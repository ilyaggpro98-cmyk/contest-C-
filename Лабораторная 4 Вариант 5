#include <iostream>
#include <cmath>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");

    double x, y;
    cout << "Выведите координату точки A(x,y): ";
    cin >> x >> y;

    const double R = 4.0;
    const double r = 2.0;
    double d = fabs(x) + fabs(y);

    if (d <= R && d >= r && !(x > 0 && y < 0))
        cout << "Лежит в заштрихованной области";
    else
        cout << "Не лежит в заштрихованной области";

    return 0;
}
